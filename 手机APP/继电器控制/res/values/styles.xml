<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="app_btn_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_app_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="switch_tab_btn_style" parent="@style/app_btn_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_switch_btn_backgroud_unclicked</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="led_item_layout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="led_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="device_status_border_layout">
        <item name="android:background">@drawable/shape_device_nocorner_border</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8.0dip</item>
    </style>
</resources>
